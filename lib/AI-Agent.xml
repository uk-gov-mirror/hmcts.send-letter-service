<?xml version="1.0" encoding="utf-8"?>
<ApplicationInsightsAgent>
    <AgentLogger>INFO</AgentLogger>
    <Instrumentation>
        <BuiltIn enabled="true">
            <HIBERNATE enabled="true"/>
            <HTTP enabled="true"/>
        </BuiltIn>
        <Class name="uk.gov.hmcts.reform.sendletter.services.encryption.PgpEncryptionUtil">
            <Method name="encryptFile" reportCaughtExceptions="true" reportExecutionTime="true"/>
        </Class>
        <Class name="uk.gov.hmcts.reform.sendletter.services.pdf.PdfCreator">
            <Method name="createFromTemplates" reportCaughtExceptions="true" reportExecutionTime="true"/>
            <Method name="createFromBase64Pdfs" reportCaughtExceptions="true" reportExecutionTime="true"/>
        </Class>
        <Class name="uk.gov.hmcts.reform.sendletter.tasks.TaskSchedule">
            <Method name="uploadLetters" reportCaughtExceptions="true" reportExecutionTime="true"/>
            <Method name="markPosted" reportCaughtExceptions="true" reportExecutionTime="true"/>
            <Method name="staleLetters" reportCaughtExceptions="true" reportExecutionTime="true"/>
        </Class>
    </Instrumentation>
</ApplicationInsightsAgent>
